{
  "name": "Aparecium",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "A charm to reveal secret messages",
  "homepage_url": "https://github.com/humphd/aparecium",
  "content_scripts": [
    {
      "matches": ["https://*.content-service.brightspace.com/*"],
      "js": ["arrive.min.js", "content-script.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "page_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png",
      "64": "images/icon64.png",
      "128": "images/icon128.png"
    },
    "default_title": "Aparecium: charm to reveal secret messages"      // optional; shown in tooltip
  },
  "icons": {
    "16": "images/icon16.png",
    "24": "images/icon24.png",
    "32": "images/icon32.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  }
}
